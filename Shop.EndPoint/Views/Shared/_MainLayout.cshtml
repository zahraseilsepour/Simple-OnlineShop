<!doctype html>
<html lang="fa" dir="rtl">
<head>

    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>@ViewData["Title"]</title>
    <!-- CSS Styles -->  <link rel="stylesheet" href="/css/style.css">
    <!-- /CSS Styles -->
    <partial name="_HeaderRefrences" />
     @RenderSection("styles",false)
</head>
<body>
<!-- Header -->
@await Component.InvokeAsync("SiteHeader")
<!-- /Header -->
<div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>


<!-- Footer -->
@await Component.InvokeAsync("SiteFooter")

<!-- /Footer -->

<!-- Copyright -->
<section class="py-2" id="copyright">
    <div class="container">
        <div class="row">
            <div class="col-12 col-sm-6" id="social-links">
                <span>ما را دنبال کنید</span>
                <a href="#"><img src="/images/social/insta.png" alt=""></a>
                <a href="#"><img src="/images/social/facebook.png" alt=""></a>
                <a href="#"><img src="/images/social/linkedin.png" alt=""></a>
                <a href="#"><img src="/images/social/twitter.png" alt=""></a>
                <a href="#"><img src="/images/social/youtube.png" alt=""></a>
            </div>
            <div class="col-12 col-sm-6 text-sm-end pt-2 pt-sm-0">
                <span>کلیه حقوق و مادی معنوی محفوط است.</span>
            </div>
        </div>
    </div>
</section>
<!-- Copyright -->

<partial name="_FooterRefrences" />
@RenderSection("scripts",false)
</body>
</html>